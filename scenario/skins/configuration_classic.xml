<config>
	<cssSkin>skins/classic/player-min.css</cssSkin>
	<controlBarAutoHide>true</controlBarAutoHide>
	<tocTitleColor>0x0F0F0F</tocTitleColor>
	<tocItemTextColor>0x000000</tocItemTextColor>
	<tocItemUpColor>0xDDDDDD</tocItemUpColor>
	<tocItemOverColor>0xB1B1B1</tocItemOverColor>
	<tocItemDownColor>0xC1C1C1</tocItemDownColor>
	<tocItemSelectedUpColor>0xA1A1A1</tocItemSelectedUpColor>
	<tocItemSelectedOverColor>0xA1A1A1</tocItemSelectedOverColor>
	<tocItemSelectedDownColor>0xA1A1A1</tocItemSelectedDownColor>
	<chrome>
		<widgets>
			<widget height="18"
					  horizontalAlign="center"
					  id="controlBar"
					  layoutMode="horizontal"
					  type="ControlBar"
					  verticalAlign="top">

				<widget id="leftMargin"
						  type="Widget"
						  width="0"/>

				<widget id="rewindbutton"
						  type="RewindButton"/>

				<widget horizontalAlign="left"
						  left="0"
						  top="0"
						  verticalAlign="center">



					<widget id="playButton"
							  type="playButton"/>

					<widget id="pauseButton"
							  type="pauseButton"/>

				</widget>

				<widget id="previousButton"
						  type="PlaylistPreviousButton"/>

				<widget id="nextButton"
						  type="PlaylistNextButton"/>


				<widget face="seperatorLeft"
						  id="seperatorleft"
						  type="Widget"
						  width="2"/>

				<widget id="spacerBeforeScrubBar"
						  type="Widget"
						  width="7"/>

				<widget horizontalAlign="center"
						  id="scrubBar"
						  percentWidth="100"
						  thumbOffsetY="2"
						  markerWidth="3"
						  markerHeight="3"
						  markerColor="0xF0F0F0"
						  markerColorAlpha="1"
						  markerCorner="2"
						  top="4"
						  includeTimeHint="false"
						  type="scrubBar"
						  verticalAlign="top"/>


				<widget id="spacerAfterScrubBar"
						  type="Widget"
						  width="7"/>

				<widget fontSize="11"
						  horizontalAlign="right"
						  id="timeViewWidget"
						  textColor="0x000000"
						  top="0"
						  type="TimeViewWidget"
						  verticalAlign="middle"/>

				<widget face="seperatorRight"
						  id="seperatorright"
						  type="Widget"
						  width="2"/>

				<widget horizontalAlign="right"
						  layoutMode="horizontal"
						  verticalAlign="center">

					<widget id="muteButton"
							  sliderEnd="54"
							  sliderStart="10"
							  type="MuteButton"/>

					<widget id="captionbutton"
							  type="CaptionButton"/>

					<widget id="tocbutton"
							  type="TOCButton"/>

					<widget id="fullscreenMaxButton"
							  type="FullScreenEnterButton"/>

					<widget id="fullscreenMinButton"
							  type="FullScreenLeaveButton"/>
				</widget>

				<widget id="rightMargin"
						  type="Widget"
						  width="0"/>
			</widget>
		</widgets>
	</chrome>
</config>
